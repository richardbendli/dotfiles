{
  "editor.tabSize": 2,
  "editor.fontSize": 21,
  "editor.fontFamily": "JetBrains Mono Light",
  "editor.fontLigatures": false,
  "editor.wordWrap": "on",
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs":"active",
  "vsicons.dontShowNewVersionMessage": false,
  "auto-rename-tag.activationOnLanguage": ["html", "xml", "css", "javascript"],

  "liveServer.settings.donotVerifyTags": true,
  "liveServer.settings.donotShowInfoMsg": true,
  "emmet.includeLanguages": { "html": "html", "vue-html": "html", "css": "css", "javascript": "javascriptreact" },
  "emmet.showExpandedAbbreviation": "always",


  "javascript.preferences.importModuleSpecifierEnding": "js",
  "[javascript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "workbench.colorCustomizations": {
    "statusBar.background": "#323536",
    "statusBar.noFolderBackground": "#444447",
    "statusBar.debuggingBackground": "#853838"
  },
  "workbench.editor.enablePreview": false,
  "window.titleBarStyle": "custom",
  "workbench.editor.titleScrollbarSizing": "large",
  "window.title": "${dirty}${activeEditorShort}${separator}${rootPath}${rootName}${separator}${appName}",
  "javascript.suggest.paths": true,
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1500,
  "cSpell.enabledLanguageIds": [
    "asciidoc",
    "css",
    "git-commit",
    "go",
    "graphql",
    "handlebars",
    "html",
    "java",
    "javascript",
    "javascriptreact",
    "less",
    "markdown",
    "plaintext",
    "python",
    "scss",
    "text",
    "typescript",
    "typescriptreact",
    "vue",
    "yaml",
    "yml"
  ],
    "workbench.startupEditor": "none",
    "workbench.editor.wrapTabs": true,
    "bracket-pair-colorizer-2.depreciation-notice": false,
    "telemetry.telemetryLevel": "off",
    "workbench.editor.enablePreviewFromQuickOpen": true,
    "debug.javascript.autoAttachFilter": "always",
    "git.autofetch": true,
    "workbench.sideBar.location": "left",
    "workbench.reduceMotion": "on",
    "security.workspace.trust.untrustedFiles": "newWindow",
    "editor.stickyScroll.enabled": true,
    "editor.smoothScrolling": true,
    "terminal.integrated.smoothScrolling": true,
    "workbench.editor.highlightModifiedTabs": true,
    "files.trimTrailingWhitespace": true,

}

