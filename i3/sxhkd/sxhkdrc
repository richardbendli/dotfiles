#===================================== keybinds =====================================

#vlc
super + v
    vlc --video-on-top

#browser
super + b
    firefox

#gitkraken
super + alt + g
    gitkraken

#vscode
super + c
    code

#htop
super + h
    urxvt 'htop task manager' -e htop

#urxvt
super + t
    urxvt

#alacritty
super + Return
    alacritty

#pcmanfm
super + p
    pcmanfm

#krusader
super + k
    krusader

#nitrogen
ctrl + alt + n
     nitrogen

#reload sxhkd
super + shift + s
    pkill -USR1 -x sxhkd

#xkill
ctrl + alt + x
    xkill

