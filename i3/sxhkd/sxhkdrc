#===================================== wallpaper =====================================

#wallpaper trash
alt + shift + t
    variety -t

#wallpaper next
alt + shift + n
    variety -n

#wallpaper previous
alt + shift + p
    variety -p

#wallpaper favorite
alt + shift + f
    variety -f

#wallpaper update
alt + shift + u
    wal -i $(cat $HOME/.config/variety/wallpaper/wallpaper.jpg.txt)&


