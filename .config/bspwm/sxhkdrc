# kitty
super + Return
    kitty

# ranger
super + r
    kitty -e ranger

# lvim
super + l
    kitty -e lvim

# btop
super + b
    kitty -e btop

# kill
super + q
	bspc node -c

# browser firefox
alt + b
    firefox

# browser brave
alt + e
    brave-browser-stable

# vscode
alt + c
    code

# thunar
alt + t
    thunar

# qmmp
alt + m
    qmmp

# rofi
alt + r
    rofi -show drun

# notifications
ctrl + shift + c
    dunstctl close

ctrl + shift + a
    dunstctl close-all

ctrl + shift + x
    dunstctl context

ctrl + shift + h
    dunstctl history-pop

# reload bspwm
ctrl + shift + b
	~/.config/bspwm/bspwmrc

# picom toggle
ctrl + shift + p
    sh ~/.config/bspwm/scripts/picom-toggle.sh

# shutdown
ctrl + shift + F7
    alacritty -e shutdown now

# open notes file in lvim
super + alt + n
    alacritty -e lvim $HOME/Documents/notes/notes.md

# rofi wifi menu
super + alt + w
	sh ~/.config/rofi/wifimenu/rofi-wifi-menu.sh

# movie
super + alt + m
	sh ~/.config/bspwm/scripts/movie.sh

# focus selected desktop
super + {1-9,0}
	bspc desktop -f '^{1-9,10}'

# rotate desktop
super + space
	bspc node @/ --rotate {90,-90}

# set the window state
super + alt + {t,s,f}
    bspc node -t {tiled,floating,fullscreen}

# focus/swap windows by direction
super + alt + {h,j,k,l}
	bspc node --{focus} {west,south,north,east}

# expand tiled space
super + alt + {Left,Down,Up,Right}
	bspc node {@west -r -10,@south -r +10,@north -r -10,@east -r +10}

# focus/swap windows by direction,repositions the window with another
super + {_,ctrl + }{h,j,k,l}
	bspc node --{focus,swap} {west,south,north,east}

# move window to selected desktop
super + ctrl + {1-9,0}
    id=$(bspc query -N -n); bspc node -d ^{1-9,10}; bspc node -f ${id}}

#=============================================== eof ===============================================
